<head>
	<style>
	table {
		font-family: arial, sans-serif;
		border-collapse: collapse;
		width: 100%;
	}
	td, th {
		border: 1px solid #dddddd;
		text-align: left;
		padding: 8px;
	}
	tr:nth-child(even) {
		background-color: #dddddd;
	}
</style>
</head>
<h1>Edit a Person</h1>
<%= form_for @person  do |f| %>
		<%= f.text_field :name %>
		<%= f.text_field :address %>
        <%= f.submit "UPDATE" %>
	<% end %>
<%= link_to 'Back', @person %>
